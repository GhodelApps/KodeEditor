<?xml version="1.0" encoding="utf-8"?>
<com.otaliastudios.zoom.ZoomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cev_linenumbers_zoomLayout"
    android:layout_width="@dimen/cev_linenumber_width"
    android:layout_height="match_parent"
    android:scrollbars="none"
    app:horizontalPanEnabled="false"
    app:verticalPanEnabled="false"
    app:zoomEnabled="false">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cev_linenumbers_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end|top"
        android:paddingTop="10dp"
        android:textSize="12sp"
        android:typeface="monospace" />

</com.otaliastudios.zoom.ZoomLayout>